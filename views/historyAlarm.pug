extends ./partial/layout.pug
block linkcss
	link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet")
	link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css")
	link(href="https://cdn.datatables.net/2.0.8/css/dataTables.bootstrap5.min.css" rel="stylesheet")
	link(rel="stylesheet", href="/css/historyAlarm.css")
	link(rel="stylesheet", href="/css/pageCommon.css")
block content
	.container-fluid
		h2.mb-4.text-primary Alarm History Log

			// Filter Card
			.card.card-custom.p-4.mb-4
				h5.card-title.text-dark.mb-3
					i.fas.fa-filter.me-2.text-primary
					| Filter by Time Range
				.row.align-items-end
					.col-lg-3.col-md-6.mb-3
						label.form-label.text-muted(for="startHour") Start Time
						input#startHour.form-control.form-control-datetime(type="datetime-local")
					.col-lg-3.col-md-6.mb-3
						label.form-label.text-muted(for="endHour") End Time
						input#endHour.form-control.form-control-datetime(type="datetime-local")
					.col-lg-2.col-md-12.mb-3
						button#viewButton.btn.btn-primary.w-100
							i.fas.fa-eye.me-1
							| View

			// Alarm Table
			.card.card-custom.p-4
				h5.card-title.text-primary.mb-3
					i.fas.fa-bell.me-2
					| Detailed Alarm Events

				.table-responsive
					table#alarmTable.table.table-striped.table-hover.w-100
						thead.table-light
							tr
								th Site ID
								th Sitename
								th Channel
								th Timestamp Data
								th Timestamp Alarm
								th Alarm
						tbody#alarmTableBody

