extends ./partial/layout.pug
block linkcss
    link(rel="stylesheet", href="/css/dataMonthLogger.css")
    link(rel="stylesheet", href="/css/pageCommon.css")
block content
    .container-fluid
        .row.title-pressure
            h3 Monthly data
        .row.info
            .col-sm-4
                span.ml-2.mr-3 Choose site
                select.form-select.form-select-sm#selectSite(aria-label='.form-select-sm example')
            .col-sm-4 
                span.ml-2.mr-3 Start month
                input#startDate(type='month' name='startDate' value='' min='1970-01-01T00:00' max='')
            .col-sm-4 
                span.ml-2.mr-3 End month
                input#endDate(type='month' name='endDate' value='' min='1970-01-01T00:00' max='')
            .col-sm-12.button  
                button.btn.btn-primary.btn-sm#viewDataMonthLogger View
        .row.result
            .col 
                #tablePlaceHolder
                    .loading
                        img#loading.hide(src='/images/loading.svg')

block linkcriptbody
    script(src="/js/hostname.js") 
    script(src="/js/datamonthLogger.js") 
    script(src="/js/util.js") 