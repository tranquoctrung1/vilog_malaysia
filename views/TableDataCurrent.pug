extends ./partial/layout.pug
block linkcss
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css")
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css")
    link(rel="stylesheet", href="/css/tableDataCurrent.css")
    link(rel="stylesheet", href="/css/pageCommon.css")
block content
    .container-fluid.py-4
        h2.mb-4.text-primary Vilog Site Current Snapshot

        .card.p-3.mb-4
            h5.card-title.text-dark.mb-3
                i.fas.fa-filter.me-2.text-primary
                | Filter Sites
            .row
                .col-md-3
                    select.form-select#statusFilter
                        option(value="all") Filter by Status (All)
                        option(value="Connected") Connected
                        option(value="Disconnected") Disconnected
                        option(value="Alarm") Alarm
                .col-md-3
                    input.form-control#searchSite(type="text", placeholder="Search by Site ID or Location")
        #siteCardsContainer.row
            
block linkcriptbody
    script(src="https://code.jquery.com/jquery-3.7.1.min.js")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js")
    script(src="/js/hostname.js") 
    script(src="/js/tableDataCurrent.js") 
    script(src="/js/util.js") 
