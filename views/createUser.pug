extends ./partial/layout.pug
block linkcss
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css")
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css")
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/tom-select/dist/css/tom-select.bootstrap5.min.css")
    link(rel="stylesheet", href="/css/createUser.css")
    link(rel="stylesheet", href="/css/pageCommon.css")
block content
    .container.py-4
        .card.card-config
            .config-header
                i.fa-solid.fa-users.me-2
                | Create User
            .card-body.p-4.p-lg-5
                .row
                    .col-md-6
                        label#lbUserName.form-label.form-label-config Username
                        select.form-control#userName2.form-select( type="text" aria-label='lbUserName' aria-describedby='lbUserName' data-placeholder="choose username")
                    .col-md-6
                        label#lbPassword.form-label.form-label-config Password
                        input.form-control#password( type="password" aria-label='lbPassword' aria-describedby='lbPassword' )
                    .col-md-6
                        label#lbEmail.form-label.form-label-config Email
                        input.form-control#email( type="email" aria-label='lbEmail' aria-describedby='lbEmail' )
                    .col-md-6
                        label#lbRole.form-label.form-label-config Role
                        select.form-control#role.form-select( type="text" aria-label='lbRole' aria-describedby='lbRole' data-placeholder="choose role")
                    .col-md-6
                        span#lbStaffId.form-label.form-label-config Employee Name
                        select.form-control#staffId.form-select( type="text" aria-label='lbStaffId' aria-describedby='lbStaffId' data-placeholder="choose employee")
                    .col-md-6
                        span#lbConsumerId.form-label.form-label-config Consumer Name
                        input.form-control#consumerId.form-select( type="text" aria-label='lbConsumerId' aria-describedby='lbConsumerId' data-placeholder="choose consumer")
                    .col-sm-6.d-none
                        label#lbId.form-label.form-label-config id
                        input.form-control#id.form-select( type="text" aria-label='lbId' aria-describedby='lbId' )
                    .config-actions.text-end
                        button.btn.btn-success.me-2#btnInsert(type="button")
                            i.fas.fa-plus.me-1
                            | Add
                        button.btn.btn-info.me-2.text-white#btnUpdate(type="button")
                            i.fas.fa-save.me-1
                            | Update
                        button.btn.btn-danger#btnDelete(type="button")
                            i.fas.fa-trash.me-1
                            | Delete
            #Model.modal.fade.bd-example-modal-lg(tabindex='-1' role='dialog' aria-labelledby='ModelLabel' aria-hidden='true')
                .modal-dialog.modal-lg(role='document')
                    .modal-content
                        .modal-header.bg-primary.text-white
                            h5#ModelLabel.modal-title Add Infomation
                            button.btn-close.btn-close-white(type="button" data-bs-dismiss="modal" aria-label="Close")
                        .modal-body
                            .row#rowStaff 
                                .col-md-6
        
                                        label#lbModalFullNameStaff.form-label.form-label-config Full name employee
                                        select.form-control#modalFullNameStaff.form-select( type="text" aria-label='lbModalFullNameStaff' aria-describedby='lbModalFullNameStaff' data-placeholder="choose employee" onchange="modalFullNameStaffChanged(this)")
                                .col-md-6
        
                                        label#lbModalTelephoneStaff.form-label.form-label-config Phone
                                        input.form-control#modalTelephoneStaff( type="text" aria-label='lbModalTelephoneStaff' aria-describedby='lbModalTelephoneStaff')
                                .col-sm-12
        
                                        label#lbModalAddressStaff.form-label.form-label-config Address 
                                        input.form-control#modalAddressStaff( type="text" aria-label='lbModalAddressStaff' aria-describedby='lbModalAddressStaff')
                                .col-sm-12.d-none
                                        label#lbIdStaff.form-label.form-label-config Id
                                        input.form-control#modalIdStaff( type="text" aria-label='lbIdStaff' aria-describedby='lbIdStaff' )
                                .config-actions.text-end
                                    button.btn.btn-success.me-2#btnInsert(type="button" onclick="insertStaff(this)")
                                        i.fas.fa-plus.me-1
                                        | Add
                                    button.btn.btn-info.me-2.text-white#btnUpdate(type="button" onclick="updateStaff(this)")
                                        i.fas.fa-save.me-1
                                        | Update
                                    button.btn.btn-danger#btnDelete(type="button" onclick="deleteStaff(this)")
                                        i.fas.fa-trash.me-1
                                        | Delete
                            .row#rowConsumer
                                .col-md-6
        
                                        label#lbModalFullNameConsumer.form-label.form-label-config Full name consumer 
                                        select.form-control#modalFullNameConsumer.form-select( type="text" aria-label='lbModalFullNameConsumer' aria-describedby='lbModalFullNameConsumer' data-placecholder="choose consumer" onchange="modalFullNameConsumerChanged(this)")
                                .col-md-6
        
                                        label#lbModalTelephoneConsumer.form-label.form-label-config Phone
                                        input.form-control#modalTelephoneConsumer( type="text" aria-label='lbModalTelephoneConsumer' aria-describedby='lbModalTelephoneConsumer')
                                .col-sm-12
        
                                        label#lbModalAddressConsumer.form-label.form-label-config Address 
                                        input.form-control#modalAddressConsumer( type="text" aria-label='lbModalAddressConsumer' aria-describedby='lbModalAddressConsumer')
                                .col-sm-12.d-none
        
                                        label#lbIdConsumer.form-label.form-label-config Id
                                        input.form-control#modalIdConsumer( type="text" aria-label='lbIdConsumer' aria-describedby='lbIdConsumer' )
                                .config-actions.text-end
                                    button.btn.btn-success.me-2#btnInsert(type="button" onclick="insertConsumer(this)")
                                        i.fas.fa-plus.me-1
                                        | Add
                                    button.btn.btn-info.me-2.text-white#btnUpdate(type="button" onclick="updateConsumer(this)")
                                        i.fas.fa-save.me-1
                                        | Update
                                    button.btn.btn-danger#btnDelete(type="button" onclick="deleteConsumer(this)")
                                        i.fas.fa-trash.me-1
                                        | Delete
block linkcriptbody
    script(src="https://code.jquery.com/jquery-3.7.1.min.js")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js")
    script(src="https://cdn.jsdelivr.net/npm/tom-select/dist/js/tom-select.complete.min.js") 
    script(src="/js/hostname.js")
    script(src="/js/staff.js")
    script(src="/js/consumer.js")
    script(src="/js/createUser.js")
    script(src="/js/util.js") 